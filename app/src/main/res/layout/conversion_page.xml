<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e2e2e2"
    >

  <TextView
      android:id="@+id/unit"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="24dp"
      android:fontFamily="sans-serif-black"
      android:text="Length/Distance"
      android:textSize="40sp"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="@+id/adView"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="@+id/adView"
      app:layout_constraintTop_toBottomOf="@+id/adView" />

  <Spinner
      android:id="@+id/spinner_a"
      android:layout_width="0dp"
      android:layout_height="40dp"
      android:layout_marginTop="16dp"
      app:layout_constraintEnd_toEndOf="@+id/unit"
      app:layout_constraintStart_toStartOf="@+id/unit"
      app:layout_constraintTop_toBottomOf="@+id/unit" />

  <EditText
      android:id="@+id/textfield_a"
      android:layout_width="0dp"
      android:layout_height="80dp"
      android:layout_marginTop="16dp"
      android:autofillHints="Value"
      android:fontFamily="serif"
      android:hint="value"
      android:inputType="number|numberDecimal"
      android:textColor="#414141"
      android:textSize="35sp"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="@+id/spinner_a"
      app:layout_constraintStart_toStartOf="@+id/spinner_a"
      app:layout_constraintTop_toBottomOf="@+id/spinner_a" />

  <Spinner
      android:id="@+id/spinner_b"
      android:layout_width="0dp"
      android:layout_height="40dp"
      android:layout_marginTop="16dp"
      app:layout_constraintEnd_toEndOf="@+id/textfield_a"
      app:layout_constraintStart_toStartOf="@+id/textfield_a"
      app:layout_constraintTop_toBottomOf="@+id/textfield_a" />

