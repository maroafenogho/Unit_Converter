  <!--            android:id="@+id/textfield_b"-->
  <!--            android:layout_width="0dp"-->
  <!--            android:layout_height="80dp"-->
  <!--            android:layout_marginTop="8dp"-->
  <!--            android:fontFamily="serif"-->
  <!--            android:inputType="numberDecimal"-->
