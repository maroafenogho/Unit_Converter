  <!--            app:layout_constraintStart_toStartOf="@+id/spinner_b"-->
  <!--            app:layout_constraintTop_toBottomOf="@+id/spinner_b" />-->

  <EditText
      android:id="@+id/textfield_b"
      android:layout_width="0dp"
      android:layout_height="80dp"
      android:layout_marginTop="16dp"
      android:autofillHints="Value"
      android:fontFamily="serif"
      android:hint="answer"
      android:inputType="number|numberDecimal"
      android:textColor="#414141"
      android:textSize="35sp"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="@+id/spinner_b"
      app:layout_constraintStart_toStartOf="@+id/spinner_b"
      app:layout_constraintTop_toBottomOf="@+id/spinner_b" />

  <com.google.android.gms.ads.AdView
      android:id="@+id/adView"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:layout_centerInParent="true"
      android:layout_marginStart="32dp"
      android:layout_marginLeft="32dp"
      android:layout_marginEnd="32dp"
      android:layout_marginRight="32dp"
      app:adSize="BANNER"
      app:adUnitId="@string/banner_id_use"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>